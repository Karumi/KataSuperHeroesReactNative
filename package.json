{
  "name": "kata-super-heroes-react-native",
  "private": false,
  "scripts": {
    "start": "react-native start",
    "eject": "react-native eject",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "fixLint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix",
    "test": "jest",
    "testWatching": "yarn test --watch",
    "updateSnapshots": "yarn test --updateSnapshot",
    "clean": "rimraf build",
    "build": "yarn clean && yarn tsc",
    "watch": "yarn build -w",
    "watchAndRunAndroid": "concurrently \"yarn watch\" \"yarn android\"",
    "buildRunAndroid": "yarn build && yarn watchAndRunAndroid ",
    "watchAndRunIOS": "concurrently \"yarn watch\" \"yarn ios\"",
    "buildRunIOS": "yarn build && yarn watchAndRunIOS ",
    "watchAndStart": "concurrently \"yarn watch\" \"yarn start\"",
    "buildAndStart": "yarn build && yarn watchAndStart "
  },
  "dependencies": {
    "fp-ts": "^1.9.0",
    "react": "16.3.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-30.0.0.tar.gz",
    "react-navigation": "^2.18.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^2.0.4"
  },
  "version": "1.0.0",
  "description": "Super Heroes Kata for React Native Developers in Typescript.",
  "repository": "https://github.com/Karumi/KataSuperHeroesReactNative.git",
  "author": "Pedro Vicente Gómez Sánchez <pedro@karumi.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/react": "^16.4.18",
    "@types/react-native": "^0.57.7",
    "@types/react-navigation": "^2.0.24",
    "@types/react-redux": "^6.0.9",
    "@types/react-test-renderer": "^16.0.3",
    "@types/redux-mock-store": "^1.0.0",
    "@types/remote-redux-devtools": "^0.5.3",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "concurrently": "^4.0.1",
    "copyfiles": "^2.1.0",
    "jest-react-native": "^18.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-devtools": "^3.4.1",
    "react-native-scripts": "^2.0.1",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "^16.5.2",
    "redux-mock-store": "^1.5.3",
    "remote-redux-devtools": "^0.5.13",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "watchman": "^1.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transformIgnorePatterns": [
      "node_modules/(?!(|react-native-maps|react-native-super-grid|react-native-iphone-x-helper|native-base|react-native|lottie-react-native|react-native-maps|react-native-svg|react-native-branch|native-base-shoutem-theme|react-native-easy-grid|react-native-drawer|react-native-vector-icons|react-native-keyboard-aware-scroll-view|react-navigation|native-base|react-native-scrollable-tab-view)/)"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/test-utils/setup-tests.js",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
